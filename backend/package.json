{
  "name": "freeio-backend",
  "version": "1.0.0",
  "description": "Backend API for the Freeio freelance marketplace",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node --transpile-only app.ts",
    "build": "tsc",
    "test": "jest",
    "seed": "ts-node scripts/seed.ts",
    "seed-services": "node scripts/seed-services.js",
    "analyze-services": "node scripts/analyze-services.js",
    "update-images": "ts-node --transpile-only scripts/update-service-images.ts",
    "update-author-images": "node scripts/update-author-images.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.6",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.5",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.17.27",
    "@types/nodemailer": "^6.4.9",
    "@types/validator": "^13.11.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
